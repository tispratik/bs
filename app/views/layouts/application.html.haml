!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    = stylesheet_link_tag 'reset', 'ui-lightness/jquery-ui-1.8.6.custom', 'jquery.autocomplete', 'application', "event_calendar", "colorbox", :cache => "base"
    = javascript_include_tag 'jquery-1.4.4.min', 'rails', 'jquery-ui-1.8.6.custom.min', 'jquery.colorbox-min', 'jquery.autocomplete.pack', 'jquery.validate.pack', 'application', :cache => "base"
    = javascript_include_tag 'jintastic'
    = csrf_meta_tag
    = yield(:head)
    
  %body
    <LINK REL="SHORTCUT ICON" HREF="/images/websitelogo.png">  
    #container
      #header
        = render :partial => "layouts/top_bar"
      #sidebar.left
        = render :partial => "layouts/logo_box"
        = yield(:sidebar)
        
      #content.right
        = render :partial => "layouts/header"
        = yield
        
        
      .clear