  %body
    / #preloader{:style => "display:none"}
    /   #preloader-spinner
    /     %img{:src => "#{root_url}/images/spinner.gif"}
    
    #container
      #header
        = render :partial => "layouts/top_bar"
      = render :partial => "layouts/pagecontext"
      = yield 