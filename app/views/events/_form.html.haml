:javascript
  $(document).ready(function() {
    
    $('#event_is_all_day').change(function() {
      $('#event_start_at_4i').toggle(!this.checked);
      $('#event_start_at_5i').toggle(!this.checked);
      $('#event_end_at_input').toggle(!this.checked);
    })
    
    $('#event_repeat_frequency').change(function() {
      $('#event_repeat_until_date_input').toggle(this.value!='');
    })
    
    $('#event_is_all_day').change();
    $('#event_repeat_frequency').change();
  })

- semantic_form_for [@calendarable, event], :live_validations => true do |f|
  = error_messages_for :event
  - f.inputs do
    = f.input :calendar, :collection => @calendarable.calendars
    = f.input :summary, :label => "Subject", :input_html => {:style => "width:40%"}
    = f.input :is_all_day, :label => "All day?"
    = f.input :start_at, :label => "Start at"
    = f.input :end_at, :label => "End at"
    = f.input :repeat_frequency, :as => :select, :collection => Event::RECURRING_TYPES, :label => "Repeat every"
    = f.input :repeat_until_date, :label => "Until Date"
    = f.input :invitees
  = f.buttons
