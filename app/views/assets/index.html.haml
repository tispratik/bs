- if logged_in?
  - content_for :sidebar do
    = render :partial => "projects/my", :locals => {:user => current_user}
    
- form_tag '/assets', :method => :get do
  - if @assets.empty?
    %b
      No files yet in this project !
  - else
    %table.index
      %tr.header
        %th
          = sort_link 'Name', :orig_name
        %th
          = sort_link 'Size', :data_file_size
        %th
          = sort_link 'Content Type', :data_content_type  
        %th
          = sort_link 'Last Modified', :updated_at
        %th
          = sort_link 'Modified By', :updated_by
        %th
      - @assets.each do |asset|
        %tr{ :class => cycle(:odd, :even) }
          %td
            = link_to truncate(asset.to_s, :length => 15, :omission => "..."), data_project_asset_path(@project, asset)
          %td
            = number_to_human_size asset.data_file_size
          %td
            = asset.data_content_type
          %td
            = to_date_time(asset.updated_at)
          %td
            = url_name(asset.updator, "users")
          %td
            = link_to image_tag('delete.png'), [@project, asset], :method => :delete
      %tr
      %tr
      %tr{ :align => "right" }
        %td{ :colspan => "5" }
          = will_paginate @assets